<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag('icons/test.jpg') %>
    <title>Study Note</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="top-hero-wrapper">
      <div class="navbar-bk">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
        <% end %>

        <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to root_path do %>
                <span><%= image_tag "icons/logo.png", class: "navbar-brand" %></span>
              <% end %>
            </div>

            <ul id="navbar" class="nav navbar-nav navbar-right">
              <li>
                <%= link_to "ホーム", home_index_path, class:"userList" %>
              </li>
              <li>
                <%= link_to "コンテナ", container_index_path, class:"userList" %>
              </li>
              <li>
              <%= link_to "イメージ", images_index_path, class:"userList" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"userList" %>
              </li>
            </ul>
          </div>
        </nav>
      </div>

      <div class="container top-hero-container">
        <%= yield %>
      </div>

      <div class="footer">
        <div class="container">
          <div class="footer-right">
            &copy; 2021 Study Note.
          </div>
          <div class="clear"></div>
        </div>
      </div>

      <script>
        $(function(){
          $(".alert").fadeOut(5000);
        });
      </script>

    </div>
  </body>
</html>
